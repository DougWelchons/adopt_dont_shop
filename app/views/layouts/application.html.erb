<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShopM2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  <header>
    <div class="nav-bar">
      <ul>
        <p><%= link_to "Back to Home", "/" %>
          <%= link_to "Go to Shelters", "/shelters" %>
          <%= link_to 'Go to Pets', "/pets" %>
  </head><br>

  <body>
    <div class="errors">
      <% if flash[:errors] %>
          <% flash[:errors].each do |error, message| %>
          <p><%= "#{error} #{message}" %></p>
        <%end%>
      <%end%></div>

    <%= yield %>
  </body>
</html>
